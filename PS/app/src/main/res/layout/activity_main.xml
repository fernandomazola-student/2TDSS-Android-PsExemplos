<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.ps.MainActivity">

    <Spinner android:id="@+id/spArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        ></Spinner>

    <TextView android:id="@+id/lblCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cidade"
        android:layout_below="@id/spArea"
        />
    <TextView android:id="@+id/lblSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Salario"
        android:layout_below="@id/lblCidade"/>

    <CheckBox android:id="@+id/chkInteressado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblSalario"
        android:layout_marginTop="20dp"
        android:text="Estou interessado"
        android:onClick="interessado"
        />

    <EditText android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chkInteressado"
        android:layout_marginTop="20dp"
        android:hint="Informe seu e-mail"
        />

    <Button android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="10dp"
        android:text="Enviar"
        android:onClick="enviar"/>
</RelativeLayout>
